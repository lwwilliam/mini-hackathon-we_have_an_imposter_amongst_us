{
	"compilerOptions": {
    "jsx": "react",
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [ "node" ],
		"paths": {
			"@/*": ["./src/*"],
			"@icons/*": ["./public/icons/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}